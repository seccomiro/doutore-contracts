<% content_for :title do %>
  Details of Contract
<% end %>

<div class="page-header">
  <h1>Details of Contract</h1>
  <div>
    <%= link_to contract_path(@contract, format: :pdf), class: 'btn btn-info' do %>
      <%= icon 'fas', 'file-pdf' %>
      Download PDF
    <% end %>
    <%= link_to edit_contract_path(@contract), class: 'btn btn-success' do %>
      <%= icon 'fas', 'edit' %>
      Edit
    <% end %>
    <%= link_to contracts_path, class: 'btn btn-outline-secondary' do %>
      <%= icon 'fas', 'bars' %>
      Back
    <% end %>
  </div>
</div>

<h2 class="text-center"><%= @contract.title %></h2>

<dl class="dl-horizontal text-center">
  <dt>Clinic:</dt>
  <dd><%= @contract.clinic %></dd>

  <dt>Doctor:</dt>
  <dd><%= @contract.doctor %></dd>
</dl>

<div class="dropdown-divider"></div>

<dd><%= @contract.content %></dd>
