
<%= simple_form_for @contract do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.association :clinic %>
    <%= f.association :doctor %>
    <%= f.rich_text_area :content %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Create Contract' : 'Update Contract', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
