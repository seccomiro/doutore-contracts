<% content_for :title do %>
  Contracts
<% end %>

<div class="page-header">
  <h1>Contracts</h1>
  <%= link_to new_contract_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    New Contract
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Clinic</th>
        <th>Doctor</th>
        <th>Content</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @contracts.each do |contract| %>
        <tr>
          <td><%= contract.title %></td>
          <td><%= contract.clinic %></td>
          <td><%= contract.doctor %></td>
          <td><%= contract.content %></td>
          <td>
            <%= link_to contract, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_contract_path(contract), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to contract, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>