
<%= simple_form_for @clinic do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Create Clinic' : 'Update Clinic', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
